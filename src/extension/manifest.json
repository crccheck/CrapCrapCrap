{
  "manifest_version": 2,
  "name": "CrapCrapCrap",
  "version": "0.0.0",
  "description": "Track prices on sites you care about",
  "permissions": [
    "SET IN build_manifest.js"
  ],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/dp/*",
        "https://www.amazon.com/*/dp/*",
        "*://www.bigbadtoystore.com/Product*",
        "*://www.bigbadtoystore.com/Search*"
      ],
      "js": ["browser-polyfill.js", "crap.js"]
    }
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": "icons/ccc_loading.svg",
    "default_title": "CrapCrapCrap",
    "default_popup": "popup/infobox.html",
    "show_matches": "SET IN build_manifest.js"
  },
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo@2x.png",
    "48": "icons/logo@3x.png"
  }
}
